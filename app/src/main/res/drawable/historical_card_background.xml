<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Arka plan rengi - hafif mavimsi bir renk tonunu kullanıyoruz -->
    <solid android:color="#E6F0F7" />

    <!-- Köşeleri yuvarlatma -->
    <corners android:radius="8dp" />

    <!-- Kenar çizgisi - mavi renkte -->
    <stroke
        android:width="2dp"
        android:color="#4E92DF" />

    <!-- İçerideki içerik için padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Başlık -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yemek Tanımları"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Yemek Adı -->
        <EditText
            android:id="@+id/editTextMealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yemek Adı"
            android:layout_marginBottom="12dp" />

        <!-- Yemek Fiyatı -->
        <EditText
            android:id="@+id/editTextMealPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fiyat (₺)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Ekle Butonu -->
        <Button
            android:id="@+id/buttonAddMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yemek Ekle"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Liste Başlığı -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanımlı Yemekler"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Yemek Listesi -->
        <ListView
            android:id="@+id/listViewPredefinedMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp" />

    </LinearLayout>
</ScrollView>
